<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Discover Symfony{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <ul>
            {% block header %}
            <li>
                <a href="{{ path('app_home') }}">Accueil</a>
            </li>
            <li>
                <a href="{{ path('app_welcome') }}">Hello</a>
            </li>
            <li>
                <a href="{{ path('app_demo') }}">Demo</a>
            </li>
            <li>
                <a href="{{ path('app_hello', { name: 'jean-edo' }) }}">Hello Jean-Edo</a>
            </li>
            <li>
                <a href="{{ path('app_ninja_turtle') }}">Tortues Ninja</a>
            </li>
            <li>
                <a href="{{ path('app_product') }}">Produits</a>
            </li>
            {% endblock %}
        </ul>

        {% block body %}{% endblock %}
    </body>
</html>
